{% extends 'base.html.twig' %}

{% block title %}Hello PokemonController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    a{text-decoration:none;color:black}
    a:hover{text-decoration:none;color:black}
</style>

<div class="example-wrapper">
<a href="/pokedex"><h3>Return to pokedex</h3></a>
    {% for pokemon in pokemons %}
    
        <h3>{{pokemon.name}} - <img src="/img/type/{{pokemon.type}}.png"> - {{pokemon.nature}} - 
        {% if pokemon.pokemonId|length == 1 %}
             <img src="/img/pokemon/Sprite_00{{pokemon.pokemonId}}_XY.png"></h3><br>
        {% endif %}
        {% if pokemon.pokemonId|length == 2 %}
            <img src="/img/pokemon/Sprite_0{{pokemon.pokemonId}}_XY.png"></h3><br>
        {% endif %}
        {% if pokemon.pokemonId|length == 3 %}
            <img src="/img/pokemon/Sprite_{{pokemon.pokemonId}}_XY.png"></h3><br>
        {% endif %}
        
        <p>{{pokemon.description}}</p>
    {% endfor %}
</div>
{% endblock %}
